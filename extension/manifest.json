{
  "manifest_version": 3,
  "name": "Conception AI",
  "version": "4.0.0",
  "description": "The automation layer the web was missing",
  
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "webNavigation",
    "downloads",
    "storage",
    "notifications"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Conception AI"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "minimum_chrome_version": "88",
  
  "homepage_url": "https://github.com/dhanushk2105/pointandclick-dhanush",
  
  "author": "Dhanush",
  
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Open Conception AI"
    }
  }
}